<!-- @format -->

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      rel="stylesheet"
      href="	https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/css/bootstrap.min.css"
    />
    <title>Tiny URL</title>
  </head>
  <body>
    <div class="container">
      <h1 class="text-center mt-2">URL Shortner</h1>
      <form action="/shorturl" method="POST" class="my-4 d-flex flex-row">
        <label for="fullurl" class="visually-hidden">URL</label>
        <input
          required
          type="url"
          name="fullurl"
          id="fullurl"
          placeholder="URL"
          class="form-control mx-2"
        />
        <button type="submit" class="btn btn-success">Submit</button>
      </form>
      <div class="table-responsive">
        <table
          class="table table-striped table-bordered table-hover text-center"
        >
          <thead class="">
            <tr>
              <th>Full URL</th>
              <th>Tiny URL</th>
              <th>Clicks</th>
            </tr>
          </thead>
          <tbody>
            <% shorturls.forEach(url => { %>
            <tr>
              <td>
                <a href="<%=url.full%>" target="_black"><%=url.full%></a>
              </td>
              <td><a href="<%=url.short%>"><%=url.short%></a></td>
              <td><%=url.clicks%></td>
            </tr>
            <%}) %>
          </tbody>
        </table>
      </div>
    </div>
  </body>
</html>
